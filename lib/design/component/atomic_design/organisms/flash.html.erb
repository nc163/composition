<% if flash? %>
<%

  klass = ['text-center', 'button', 'alert']
  klass << 'danger'  if alert?
  klass << 'success' if notice?

  fa6 = ['fa-solid']
  fa6 << 'fa-circle-exclamation'  if alert?
  fa6 << 'fa-circle-check'        if notice?

%>
  <%= content_tag :dev, class: 'curtain', data: { controller: controller_name, action: 'click->flash-component#hide' } do %>
    <%= content_tag :p, class: klass, data: { flash: { target: 'element' } } do %>
      <%= message %>
    <% end %>
  <% end %>
<% end %>
