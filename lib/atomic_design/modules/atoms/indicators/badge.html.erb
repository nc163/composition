<%= content_tag :mark, options do %>
  <% case state :alert %>
  <% when :success %>
    <i class="bi bi-check"></i>
  <% when :warning %>
    <i class="bi bi-exclamation-triangle"></i>
  <% when :danger %>
    <i class="bi bi-exclamation-circle"></i>
  <% end %>
  <%= content || context %>
<% end %>
